{
  "name": "qa-cyberrank",
  "version": "1.0.0",
  "description": "E2E Automation Test Suite for CyberRank.ai using WebdriverIO with Cucumber",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "wdio run ./wdio.conf.mjs",
    "test:headless": "HEADLESS=true wdio run ./wdio.conf.mjs",
    "test:debug": "node --inspect-brk ./node_modules/.bin/wdio run ./wdio.conf.mjs",
    "test:smoke": "wdio run ./wdio.conf.mjs",
    "test:regression": "wdio run ./wdio.conf.mjs --cucumberOpts.tags='@regression'",
    "test:pre-login": "wdio run ./wdio.conf.mjs --spec ./features/pre-login/*.feature",
    "test:login": "wdio run ./wdio.conf.mjs --spec ./features/login/*.feature",
    "test:post-login": "wdio run ./wdio.conf.mjs --spec ./features/post-login/*.feature",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "clean": "rm -rf allure-results allure-report screenshots logs"
  },
  "keywords": [
    "webdriverio",
    "cucumber",
    "e2e",
    "automation",
    "testing",
    "cyberrank"
  ],
  "author": "Your Name",
  "license": "ISC",
  "devDependencies": {
    "@wdio/allure-reporter": "^9.18.0",
    "@wdio/cli": "^9.18.4",
    "@wdio/cucumber-framework": "^9.18.0",
    "@wdio/local-runner": "^9.18.4",
    "@wdio/spec-reporter": "^9.18.0",
    "allure-commandline": "^2.34.1",
    "wdio-chromedriver-service": "^8.1.1",
    "wdio-wait-for": "^3.1.0"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "winston": "^3.17.0"
  }
}
